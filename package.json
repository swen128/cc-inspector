{
  "name": "cc-inspector",
  "version": "0.1.0",
  "type": "module",
  "description": "Transparent proxy for the Anthropic Claude API that captures and displays requests/responses in a web UI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/swen128/cc-inspector"
  },
  "keywords": [
    "claude",
    "anthropic",
    "proxy",
    "claude-code",
    "api-inspector",
    "debugging"
  ],
  "bin": {
    "cc-inspector": "src/index.ts"
  },
  "files": [
    "src",
    "!src/**/*.test.ts",
    "!src/**/*.stories.tsx",
    "!src/**/__fixtures__",
    "styles"
  ],
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "knip": "knip",
    "check": "bun format && bun typecheck && bun lint && bun knip",
    "prepare": "husky",
    "ladle": "ladle serve",
    "ladle:build": "ladle build"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@tailwindcss/typography": "^0.5.19",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react": "^19",
    "react-dom": "^19",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@eslint/js": "^10.0.1",
    "@ladle/react": "^5.1.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.32.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-unicorn": "^63.0.0",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}
